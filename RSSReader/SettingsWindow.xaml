<Window x:Class="RSSReader.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RSSReader"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="tb_Link" HorizontalAlignment="Left" Height="23" Margin="109,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
        <RadioButton x:Name="Rb_Refresh" Content="Odświeżanie" HorizontalAlignment="Left" Margin="21,60,0,0" VerticalAlignment="Top" ClickMode="Press"/>
        <Label x:Name="lbl_Name" Content="Link dla RSS" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_Close" Content="Zamknij" HorizontalAlignment="Left" Margin="211,236,0,0" VerticalAlignment="Top" Width="75" Click="btn_Close_Click"/>
    </Grid>
</Window>
